<Application
    x:Class="MVVMNavigation.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MVVMNavigation"
    xmlns:viewModel="clr-namespace:MVVMNavigation.MVVM.ViewModels"
    xmlns:views="clr-namespace:MVVMNavigation.MVVM.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModel:HomeViewModel}">
            <views:HomeView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
    </Application.Resources>
</Application>
